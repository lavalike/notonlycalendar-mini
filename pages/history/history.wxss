/* pages/history/history.wxss */
.history_item_container{
  padding: 10px;
  display: flex;
}
.history_item_container_hover{
  background: #eeeeee;
}
.divider{
  width: 100%;
  height: 0.5rpx;
  background: #ededed;
}
.history_item_text_container{
  flex: 1;
  margin-right: 10px;
  display: flex;
  flex-flow: column;
  position: relative;
}
.history_item_title{
  color: #3b424c;
  font-size: 16px;
  font-weight: bold;
}
.history_item_date{
  position: absolute;
  bottom: 0px;
  color: #838383;
  font-size: 12px;
  margin-top: 10px;
}
.history_item_image{
  width: 113px;
  height: 75px;
  border-radius: 3.5px;
}
.history_item_footer{
  font-size: 12px;
  color: #cccccc;
  padding: 15px;
  display: flex;
  justify-content: center;
  align-items: center;
}