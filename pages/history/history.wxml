<!--pages/history/history.wxml-->
<!-- 配置+标题 -->
<view class="image_container">
  <image class="image_placeholder" src="../index/images/ic_header.png" mode="aspectFill"></image>
  <image class="image_placeholder" src="{{item.picUrl}}" mode="aspectFill"></image>
  <text class="image_title">{{item.title}}</text>
</view>
<!-- 详情 -->
<view class="details_container">
  <view class="details">{{item.details}}</view>
</view>
<!-- 日期 -->
<text class="date">{{item.year}}年{{item.month}}月{{item.day}}日</text>
<!-- 下一条 -->
<view class="next_container" hover-class="next_container_hover" bindtap="next">
  <image class="next_image" src="./images/ic_refresh.png" mode="aspectFill" />
</view>